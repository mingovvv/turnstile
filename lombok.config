# 해당 설정 파일이 최상위임을 명시
config.stopBubbling = true

# 롬복이 만든 코드에 @Generated 어노테이션 붙이기 - 테스트 커버리지 방어
lombok.addLombokGeneratedAnnotation = true

# [@Setter 금지]
# 이유: 객체의 불변성을 해침.
# 대안: @Builder나 생성자 주입을 사용하고, 변경이 필요하면 의미 있는 메서드(changeName 등)를 만들 것. 또는 @WithXXX 고려.
lombok.setter.flagUsage = error

# [@ToString 금지]
# 이유: JPA 양방향 관계에서 무한 루프 발생 가능성. 민감 정보 노출 위험.
# 대안: 필요하다면 IDE 자동 생성 기능을 이용하거나, DTO에서만 제한적으로 직접 구현.
lombok.toString.flagUsage = error

# [@Data 금지]
# 이유: @Setter, @ToString, @EqualsAndHashCode를 모두 포함하므로 가장 위험함.
# 대안: @Getter, @RequiredArgsConstructor 등 필요한 것만 골라 쓸 것.
lombok.data.flagUsage = error
